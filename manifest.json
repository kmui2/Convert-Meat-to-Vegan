{
"manifest_version": 2,
    "name": "Trump to Beef",
    "description": "Replaces Trump to Beef",
    "version": "1.0",
    "browser_action": {
        "default_icon": "off.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com; https://www.gstatic.com; https://cdn.firebase.com https://*.firebaseio.com; object-src 'self'",
	"background": { "scripts": ["background.js"] },
    "permissions":[
		"activeTab"]
}